<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#063f5c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="@string/text_title_on"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_button_prev" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_button_next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tokinosora"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent" />
            <ImageView
                android:id="@+id/imageView_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/robocosan"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent" />
            <ImageView
                android:id="@+id/imageView_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/yozoramel"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent"/>
            <ImageView
                android:id="@+id/imageView_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/akirosenthal"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent"/>
            <ImageView
                android:id="@+id/imageView_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/akaihaato"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/shirakamifubuki"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent" />
            <ImageView
                android:id="@+id/imageView_07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/natsuiromatsuri"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent"/>
            <ImageView
                android:id="@+id/imageView_08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/minatoaqua"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent"/>
            <ImageView
                android:id="@+id/imageView_09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/murasakishion"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent"/>
            <ImageView
                android:id="@+id/imageView_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/nakiriayame"
                android:adjustViewBounds="true"
                android:contentDescription="@string/talent"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>